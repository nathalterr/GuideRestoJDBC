<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console : seulement WARN et ERROR -->
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%p - %c{1}:%L - %m%n"/>
        </Console>

        <!-- Fichier principal : warnings et erreurs -->
        <File name="MAIN" fileName="logs/main.log">
            <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

        <!-- Fichier debug : tout DEBUG et plus -->
        <File name="DEBUG_LOG" fileName="logs/debug.log">
            <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d [%t] %p %c:%L - %m%n"/>
        </File>
    </Appenders>

    <Loggers>
        <!-- Logger spÃ©cifique au package : tout DEBUG/INFO/WARN/ERROR dans debug.log et main.log, PAS en console -->
        <Logger name="ch.hearc.ig.guideresto" level="DEBUG" additivity="false">
            <AppenderRef ref="DEBUG_LOG"/>
            <AppenderRef ref="MAIN"/>
        </Logger>

        <!-- Root : tout autre logger, console montre seulement WARN et ERROR -->
        <Root level="WARN">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="MAIN"/>
        </Root>
    </Loggers>
</Configuration>
